# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 90

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = double

[*.{css,scss}]
indent_size = 2

[*.json]
indent_size = 2
